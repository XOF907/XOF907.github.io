source "https://rubygems.org"

gem "jekyll", "~> 4.3.0"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-feed"

# Ruby 3.4+ compatibility gems
gem "logger"
gem "csv"
gem "ostruct"
gem "base64"

group :jekyll_plugins do
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-feed"
end

platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]